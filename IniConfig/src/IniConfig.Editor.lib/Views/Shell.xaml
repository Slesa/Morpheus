<Window x:Class="IniConfig.Editor.lib.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:viewModels="clr-namespace:IniConfig.Editor.lib.ViewModels"
        xmlns:local="clr-namespace:IniConfig.Editor.lib"
        xmlns:regions="clr-namespace:Microsoft.Practices.Prism.Regions;assembly=Microsoft.Practices.Prism"
        Title="INI editor" Height="350" Width="525">
    
    <Window.DataContext>
        <viewModels:ShellViewModel />
    </Window.DataContext>

    <DockPanel Style="{DynamicResource Style.Shell.DockPanel}">
        
        <ContentControl DockPanel.Dock="Top" regions:RegionManager.RegionName="{x:Static local:Regions.MenuBarRegion}"/>
        <ContentControl DockPanel.Dock="Bottom" regions:RegionManager.RegionName="{x:Static local:Regions.StatusBarRegion}"/>
        <ContentControl regions:RegionManager.RegionName="{x:Static local:Regions.MainRegion}"/>
        
    </DockPanel>
</Window>
